<% provide(:title, "Log in") %>

<div class="row">
  <div class="col-md-10 offset-md-1">

    <h1>Log in</h1>

    <%= form_for(:session, url: login_path, html: { class: "form" }) do |f| %>

    	<%= f.label :email %>
    	<%= f.email_field :email, class: "form-control", tabindex: "1" %>

    	<%= f.label :password %>
    	<%= link_to "(forgot password)", new_password_reset_path, tabindex: "4" %>
    	<%= f.password_field :password, class: "form-control", tabindex: "2" %>

    	<%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me, checked: true %>
        <span>Remember me on this computer</span>
      <% end %>

      <br>

    	<%= f.submit "Log in", class: "btn btn-primary", tabindex: "3" %>

    <% end %>

    <p>
      New user? <%= link_to "Sign up now", signup_path %>
    </p>

  </div>
</div>
