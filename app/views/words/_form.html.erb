<%= form_for(@word) do |f| %>

	<%= render "shared/error_messages", object: @word %>

	<%= f.label :word %>
	<%= f.text_field :word, class: "form-control" %>

	<%= f.label :definition %>
	<%= f.text_area :definition, class: "form-control" %>

	<%= f.label :sentence %>
	<%= f.text_area :sentence, class: "form-control" %>

	<%= f.submit submit_text %>

<% end %>