<% provide(:title, @title) %>

<h1><%= @title %></h1>

<% if logged_in? %>

	<nav id="word_lists">
		<%= link_to "All", words_path, remote: true %>
		<%= link_to "Added", words_path(list: "words"), remote: true %>
		<%= link_to "To study", words_path(list: "words_to_study"), remote: true %>
		<%= link_to "Studied", words_path(list: "studied"), remote: true %>
		<%= link_to "New", words_path(list: "new_words"), remote: true %>
		<%= link_to "Known", words_path(list: "known_words"), remote: true %>
		<%= link_to "Learned", words_path(list: "learned_words"), remote: true %>
	</nav>

<% end %>

<div id="word-modal">
	<div></div>
	<button type="button">Close</button>
</div>

<div id="words_list">
	<%= render "words/words", words: @words %>
</div>

<script>
	(function () {
		"use strict";
		var $modal = $("#word-modal");
		$modal.hide();
		$modal.children("button").on("click", function () {
			$modal.hide();
		});

		$(".pagination a").attr("data-remote", "true");
	}());
</script>