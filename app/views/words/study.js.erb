"use strict";
var $field = $("#study-field");
var word = "<%= escape_javascript(@word.word.capitalize) %>";
var example = "<%= escape_javascript(@word.sentence) %>";
var definition = "<%= escape_javascript(@word.definition) %>";

$(".answer-field").hide();
$(".toggle-button").removeClass("btn-light").addClass("btn-dark");
$field.children("h1").html(word);
$field.find("#exp p").html(example);
$field.find("#def p").html(definition);
